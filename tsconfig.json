{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "lib": ["DOM", "ES2015"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
        "*": ["@types/*"]
    }
    },
    "include": [
    "src/**/*.ts",
    "src/**/*.svelte",
    "tests/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}